.v-enter,
.v-leave-to {
  opacity: 0;
  -webkit-transform: translateY(30rpx);
          transform: translateY(30rpx);
  position: absolute;
}
.v-enter-active,
.v-leave-active {
  -webkit-transition: all 0.6s ease;
  transition: all 0.6s ease;
}

