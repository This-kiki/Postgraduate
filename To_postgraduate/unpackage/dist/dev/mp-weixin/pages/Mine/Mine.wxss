
.body {
	height: 100vh;
	background-color: rgb(248,248,248);
	/* background-color: rgb(132, 248, 100); */
}
.head {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	width: auto;
	height: 400rpx;
	padding: 0 50rpx;
	background-color: rgb(1,206,217);
}
.head-img {
	height: 100rpx;
	width: 100rpx;
}
.head-msg {
	margin-left: 40rpx;
}
.nick-name {
	margin-bottom: 15rpx;
	font-size: 32rpx;
	font-weight: 600;
}
.account-number {
	margin-top: 15rpx;
	font-size: 20rpx;
	color: rgb(224,224,224);
}
.middle {
	/* margin: 0 15rpx; */
